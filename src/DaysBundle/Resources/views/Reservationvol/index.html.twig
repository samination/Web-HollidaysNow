{% extends 'base.html.twig' %}

{% block body %}
    <h1>Reservationvols list</h1>

    <table>
        <thead>
            <tr>
                <th>Idreservation</th>
                <th>Idagence</th>
                <th>Idclient</th>
                <th>Nbplace</th>
                <th>Prix</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservationvol in reservationvols %}
            <tr>
                <td><a href="{{ path('reservationvol_show', { 'idReservation': reservationvol.idReservation }) }}">{{ reservationvol.idReservation }}</a></td>
                <td>{{ reservationvol.idagence }}</td>
