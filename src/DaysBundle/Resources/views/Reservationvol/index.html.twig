                <td>{{ reservationvol.nbplace }}</td>
                <td>{{ reservationvol.prix }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('reservationvol_show', { 'idReservation': reservationvol.idReservation }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('reservationvol_edit', { 'idReservation': reservationvol.idReservation }) }}">edit</a>
                        </li>
